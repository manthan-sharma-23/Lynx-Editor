# Dockerfile.user-container

FROM ubuntu:20.04

# Install Node.js, Python, and other dependencies
RUN apt-get update && apt-get install -y \
    nodejs \
    npm \
    python3 \
    python3-pip \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Create workspace directory
RUN mkdir /workspace
WORKDIR /workspace

# Copy bash script to run the code
COPY run_code.sh /usr/local/bin/run_code.sh
RUN chmod +x /usr/local/bin/run_code.sh

CMD ["/bin/bash"]
